{
  "$schema": "schemas/component.json",
  "modifiers": [
    "Variant",
    "Emphasis"
  ],
  "name": "Button",
  "properties": {
    "BorderColor": {
      "$": "$border/brand/strong",
      "secondary": "$border/neutral/strong"
    },
    "BorderStyle": "BorderStyle.Solid",
    "BorderThickness": {
      "$": {
        "$": 0,
        "subtle": 1
      }
    },
    "Color": {
      "$": {
        "$": "$text/neutral/inverse",
        "minimal": "$text/brand/primary",
        "subtle": "$text/brand/primary"
      },
      "secondary": "$text/neutral/primary"
    },
    "DisabledBorderColor": {
      "$": "$border/brand/strong.35",
      "secondary": "$border/neutral/strong.35"
    },
    "DisabledColor": {
      "$": {
        "$": "$text/neutral/inverse.35",
        "minimal": "$text/brand/primary.35",
        "subtle": "$text/brand/primary.35"
      },
      "secondary": "$text/neutral/primary.35"
    },
    "DisabledFill": {
      "$": {
        "$": "$background/brand/solid.35",
        "minimal": "$background/brand/primary/translucent/default.35",
        "subtle": "$background/brand/primary/translucent/default.35"
      },
      "secondary": {
        "$": "$background/neutral/tertiary/translucent/default.35",
        "minimal": "$background/neutral/primary/translucent/default.35",
        "subtle": "$background/neutral/primary/translucent/default.35"
      }
    },
    "Fill": {
      "$": {
        "$": "$background/brand/solid",
        "minimal": "$background/brand/primary/translucent/default",
        "subtle": "$background/brand/primary/translucent/default"
      },
      "secondary": {
        "$": "$background/neutral/tertiary/translucent/default",
        "minimal": "$background/neutral/primary/translucent/default",
        "subtle": "$background/neutral/primary/translucent/default"
      }
    },
    "FocusedBorderColor": "$border/brand/strong",
    "FocusedBorderThickness": 2,
    "Font": "$font-family/default",
    "HoverBorderColor": "$border/brand/strong/hovered",
    "HoverColor": {
      "$": {
        "$": "$text/neutral/inverse",
        "minimal": "$text/brand/primary/hovered",
        "subtle": "$text/brand/primary/hovered"
      },
      "secondary": "$text/neutral/primary"
    },
    "HoverFill": {
      "$": {
        "$": "$background/brand/solid/hovered",
        "minimal": "$background/brand/primary/translucent/hovered",
        "subtle": "$background/brand/primary/translucent/hovered"
      },
      "secondary": {
        "$": "$background/neutral/tertiary/translucent/hovered",
        "minimal": "$background/neutral/primary/translucent/hovered",
        "subtle": "$background/neutral/primary/translucent/hovered"
      }
    },
    "PaddingBottom": "$spacing/16",
    "PaddingLeft": "$spacing/32",
    "PaddingRight": "$spacing/32",
    "PaddingTop": "$spacing/16",
    "PressedBorderColor": "$border/brand/strong/pressed",
    "PressedColor": {
      "$": {
        "$": "$text/neutral/inverse",
        "minimal": "$text/brand/primary/pressed",
        "subtle": "$text/brand/primary/pressed"
      },
      "secondary": "$text/neutral/primary"
    },
    "PressedFill": {
      "$": {
        "$": "$background/brand/solid/pressed",
        "minimal": "$background/brand/primary/translucent/pressed",
        "subtle": "$background/brand/primary/translucent/pressed"
      },
      "secondary": {
        "$": "$background/neutral/tertiary/translucent/pressed",
        "minimal": "$background/neutral/primary/translucent/pressed",
        "subtle": "$background/neutral/primary/translucent/pressed"
      }
    }
  }
}