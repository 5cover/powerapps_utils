{
  "$schema": "https://json-schema.org/draft-07/schema",
  "required": ["name", "modifiers", "properties"],
  "properties": {
    "name": {"type": "string"},
    "modifiers": {
      "type": "array",
      "items": {"type": "string"},
      "uniqueItems": true
    },
    "properties": {
      "type": "object",
      "additionalProperties": {"$ref": "#/definitions/value"}
    }
  },
  "definitions": {
    "value": {
      "oneOf": [
        {"type": "string"},
        {"type": "number"},
        {
          "type": "object",
          "required": ["$"],
          "additionalProperties": {"$ref": "#/definitions/value"}
        }
      ]
    }
  }
}
