{
  "$schema": "https://json-schema.org/draft-07/schema",
  "required": ["name", "modifiers", "properties"],
  "properties": {
    "name": {"type": "string"},
    "modifiers": {
      "type": "array",
      "items": {"type": "string"},
      "uniqueItems": true
    },
    "properties": {
      "type": "object",
      "additionalProperties": {
        "oneOf": [
          {"type": "string"},
          {"type": "number"},
          {
            "type": "array",
            "items": [
              {
                "type": "object",
                "required": ["value"],
                "properties": { "value": {"type": "string"} },
                "additionalItems": false
              }
            ],
            "additionalItems": {
              "type": "object",
              "required": ["value"],
              "properties": { "value": {"type": "string"} },
              "additionalProperties": {
                "oneOf": [
                  { "type": "string"                              },
                  { "type": "number"                              },
                  { "type": "array" , "items": {"type": "string"} }
                ]
              }
            }
          }
        ]
      }
    }
  }
}
